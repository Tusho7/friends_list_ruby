
<div class="card mb-4">
  <div class="card-header">
    <h3>Friend Details</h3>
  </div>
  <div class="card-body">
    <%= render @friend %>
  </div>
</div>

<div class="d-flex justify-content-between">
  <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
  <%= button_to "Destroy this friend", @friend, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this friend?" } }, class: "btn btn-danger" %>
</div>
