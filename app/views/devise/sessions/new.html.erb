<div class="container">
  <h2 class="my-4 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
          <%= f.label :email, class: 'form-label' %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
          <%= f.label :password, class: 'form-label' %>
        </div>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row mb-3">
        <div class="col-md-6 offset-md-3">
          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row mb-3">
      <div class="col-md-6 offset-md-3 text-center">
        <%= f.submit "Log in", class: 'btn btn-primary w-100' %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
