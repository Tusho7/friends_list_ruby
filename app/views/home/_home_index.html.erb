<!-- app/views/welcome/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Welcome</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>
<body>
  <div class="container text-center">
    <h1 class="my-5">Welcome to Our Application!</h1>
    <p class="lead">We are delighted to have you here. Explore our features and enjoy your visit.</p>
    
    <div class="mt-4">
      <a href="<%= new_user_registration_path %>" class="btn btn-primary btn-lg">Sign Up</a>
      <a href="<%= new_user_session_path %>" class="btn btn-secondary btn-lg">Login</a>
    </div>

  </div>
</body>
</html>
